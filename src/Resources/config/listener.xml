<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="hofff.contao_contact_profiles.template_prefixes" type="collection">
            <parameter>faq_</parameter>
            <parameter>event_</parameter>
            <parameter>news_</parameter>
        </parameter>
    </parameters>
    <services>
        <defaults public="false" autoconfigure="false" autowire="false" />

        <!-- DCA Options -->
        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\Options\ContactFieldsOptions">
            <argument type="service" id="netzmacht.contao_toolkit.dca.manager"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\Options\ContactTemplateOptions">
            <argument type="service" id="contao.framework" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\Options\SocialAccountTypeOptions">
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\SocialAccount\SocialAccountRepository" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\Options\ContactProfileOptions">
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\Options\SourceOptions">
            <argument type="tagged_iterator" tag="hofff_contact_profiles.provider"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\Options\DynamicSourcesOptions">
            <argument>%hofff_contao_contact_profiles.sources%</argument>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\ContactProfileDcaListener">
            <argument type="service" id="hofff_contao_contact_profiles.alias_generator"/>
            <argument type="service" id="database_connection"/>
            <argument>%hofff_contao_contact_profiles.alias_pattern%</argument>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\ConsentBridgeListener">
            <argument type="service" id="Hofff\Contao\Consent\Bridge\ConsentToolManager" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\NewsCategoryDcaListener">
            <argument type="service" id="netzmacht.contao_toolkit.dca.manager"/>
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager"/>
            <argument>%kernel.bundles%</argument>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Dca\InitializePalettesListener" />

        <service id="Hofff\Contao\ContactProfiles\EventListener\Hook\AddContactProfileInformationListener">
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository" />
            <argument>%hofff.contao_contact_profiles.template_prefixes%</argument>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Hook\GetSearchablePagesListener">
            <argument type="service" id="contao.framework" />
            <argument type="service" id="database_connection" />
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository" />
            <argument type="service" id="Hofff\Contao\ContactProfiles\Routing\ContactProfileUrlGenerator" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\Hook\InsertTagsListener" public="true">
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository" />
            <argument type="service" id="Hofff\Contao\ContactProfiles\Routing\ContactProfileUrlGenerator" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\DynamicSource\NewsContactProfilesListener">
            <argument type="service" id="contao.framework" />
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager"/>
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository"/>
            <tag name="kernel.event_listener" event="hofff.contao_contact_profile.load_contact_profiles"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\DynamicSource\EventsContactProfilesListener">
            <argument type="service" id="contao.framework" />
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager"/>
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository"/>
            <tag name="kernel.event_listener" event="hofff.contao_contact_profile.load_contact_profiles"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\DynamicSource\FAQContactProfilesListener">
            <argument type="service" id="contao.framework" />
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager"/>
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository"/>
            <tag name="kernel.event_listener" event="hofff.contao_contact_profile.load_contact_profiles"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\DynamicSource\NewsCategoryProfilesListener">
            <argument type="service" id="contao.framework" />
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager"/>
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository"/>
            <tag name="kernel.event_listener" event="hofff.contao_contact_profile.load_contact_profiles"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\PreviewUrlConvertListener">
            <argument type="service" id="contao.framework" />
            <argument type="service" id="netzmacht.contao_toolkit.repository_manager" />
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository" />
            <argument type="service" id="database_connection" />
            <tag name="kernel.event_listener" event="contao.preview_url_convert" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\PreviewUrlCreateListener">
            <argument type="service" id="request_stack" />
            <argument type="service" id="contao.framework" />
            <argument type="service" id="Hofff\Contao\ContactProfiles\Model\Profile\ProfileRepository" />
            <tag name="kernel.event_listener" event="contao.preview_url_create" />
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\DetailPageListener">
            <argument type="service" id="netzmacht.contao_toolkit.contao.controller_adapter"/>
            <argument type="service" id="Hofff\Contao\ContactProfiles\SocialTags\SocialTagsGenerator"/>
            <tag name="kernel.event_listener" event="hofff.contao_contact_profile.profile_detail_page"/>
        </service>

        <service id="Hofff\Contao\ContactProfiles\EventListener\MultilingualListener">
            <argument type="service" id="netzmacht.contao_toolkit.dca.manager"/>
            <argument>%hofff_contao_contact_profiles.multilingual.languages%</argument>
            <argument>%hofff_contao_contact_profiles.multilingual.fallback_language%</argument>
            <argument>%hofff_contao_contact_profiles.multilingual.fields%</argument>
        </service>
    </services>
</container>
